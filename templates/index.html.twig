{% extends 'layout/_default.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('landing') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('landing') }}
{% endblock %}

{% block body %}
    <!--Main Navigation-->
    <header>
        <!--Navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top scrolling-navbar">
           {% include '_navbar.html.twig' %}
        </nav>
        <!--/.Navbar-->

        <!--Mask-->
        <div id="intro">
            <div class="mask">
                <div class="container-fluid d-flex align-items-center justify-content-center h-100">

                    <div class="row d-flex justify-content-center text-center">

                        <div class="col-md-10">

                            <!-- Heading -->
                            <h2 class="display-3 font-good-brush pt-5 mb-2" style="margin-left: -3rem;">
                                <span class="display-1">A</span>rma<span class="display-1">F</span>orces
                            </h2>

                            <!-- Divider -->
                            <hr class="hr-dark">

                            <!-- Description -->
                            <h4 class="mb-4 mt-2">
                                Semper specialis.
                            </h4>

                            <!-- Button About -->
                            <a href="{{ path('app_home_index') }}#about" class="btn btn-outline-white mx-3 smooth-scroll">
                                {{ 'About us'|trans }}
                            </a>

                            <!-- Button Join Us -->
                            <a href="{{ path('app_home_joinus') }}" class="btn btn-outline-white mx-3 smooth-scroll">
                                {{ 'Join us!'|trans }}
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!--/.Mask-->

    </header>
    <!--/Main Navigation-->

    <!--Main Content-->
    <main class="mt-5">
        <div class="container">

            {% include 'partials/index/_about.html.twig' %}

            {# <hr class="my-5">
            {% include 'partials/index/_missions.html.twig' %} #}

            {#<hr class="my-5">
            {% include 'partials/index/_media.html.twig' %}#}

        </div>
    </main>
    <!--Main layout-->

    <!-- Footer -->
    <footer id="footer" class="page-footer font-small unique-color-dark">

        {# {% include 'partials/index/_footer_social.html.twig' %} #}

        <!--Footer Links-->
        <div class="container mt-5 mb-4 text-center text-md-left">
            <div class="row pt-3">
                <!-- Column-->
                <div class="col-sm-3">
                    <h6 class="text-uppercase font-weight-bold">
                        <strong>{{ 'Useful links'|trans }}</strong>
                    </h6>
                    <hr class="hr-light mt-0 d-inline-block" style="width: 60px;">
                    <p>
                        <a href="{{ url.statute }}">{{ 'Statute'|trans }}</a>
                    </p>
                    <p>
                        <a href="{{ url.wiki }}">{{ 'Wiki'|trans }}</a>
                    </p>
                </div>
                <!--/ Column-->
            </div>
        </div>
        <!--/.Footer Links-->

        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">Â© 2020 Copyright:
            <a href="https://github.com/ArmaForces/Website/contributors"> ArmaForces</a>
        </div>
        <!-- Copyright -->

    </footer>
    <!-- Footer -->
{% endblock body %}
