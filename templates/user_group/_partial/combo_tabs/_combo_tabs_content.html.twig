{% set active = active|default('') %}

<div class="tab-pane fade{{ tabMacro.tab_show(active, 'users') }}" id="users" role="tabpanel">
    {{ form_row(form.users) }}
</div>

<div class="tab-pane fade{{ tabMacro.tab_show(active, 'permissions') }}" id="permissions" role="tabpanel">
    {{ form_row(form.permissions) }}
</div>
