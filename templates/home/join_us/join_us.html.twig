{% set title = global.app.organization ' - ' ~ 'Join polish Arma 3 clan'|trans %}

{% extends 'container_fluid.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('joinUs') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('joinUs') }}
{% endblock %}

{% block content %}
    <div id="intro">
        <div class="mask mask-half">
            <div class="container-fluid h-100">
                <!-- Grid row -->
                <div class="row d-flex justify-content-center text-center">
                    <!-- Card -->
                    <div class="card bg-dark my-4 mx-auto col-md-12 col-lg-6">
                        <div class="card-body">
                            <h4 class="card-title">{{ 'Join ArmaForces'|trans }}</h4>
                            <section class="text-left">
                                <ul id="join-steps">
                                    {% include 'home/join_us/_partial/' ~ get_current_locale() ~ '/join_steps.html.twig' %}
                                </ul>
                            </section>
                            <section class="text-left">
                                <h5>{{ 'What do we require to from recruits'|trans }}</h5>
                                <ul>
                                    <li>{{ 'Base Arma 3 game'|trans }}.</li>
                                    <li>{{ 'At least 16 years old'|trans }}.</li>
                                </ul>
                            </section>
                        </div>
                    </div>
                    <!--/ Card -->
                </div>
                <!--/ Grid row -->
            </div>
        </div>
    </div>
{% endblock %}
