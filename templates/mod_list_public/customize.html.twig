{% extends 'card.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('modListCustomize') }}
{% endblock %}

{% block content %}
    {% embed '_partial/_page_header.html.twig' %}
        {% block page_title %}
            {{ modList.name }}
        {% endblock %}
        {% block page_actions %}
            <div class="btn-group">
                <button type="button" class="btn btn-primary" data-download-optional="{{ modList.name }}">
                    {{ 'Download'|trans }}
                </button>
                <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown"></button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="#" data-download-required="{{ modList.name }}">{{ 'Download required'|trans }}</a>
                </div>
            </div>
        {% endblock %}
    {% endembed %}

    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-tabs justify-content-end" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="optional-mods-tab" data-toggle="tab" href="#optional-mods" role="tab">
                        {{ 'Optional mods'|trans }}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="required-mods-tab" data-toggle="tab" href="#required-mods" role="tab">
                        {{ 'Required mods'|trans }}
                        <span class="badge badge-light badge-pill">
                            {{ requiredMods|length }}
                        </span>
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                {% include 'mod_list_public/_partial/_optional_mods_tab.html.twig' %}
                {% include 'mod_list_public/_partial/_required_mods_tab.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
