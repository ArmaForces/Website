{% extends 'container.html.twig' %}

{% block content %}
    <div class="mt-3">
        <div class="row">
            <div class="col-md-12">
                <h2>{{ 'Mod list customization'|trans }}</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-tabs justify-content-end" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="optional-mods-tab" data-toggle="tab" href="#optional-mods" role="tab" aria-controls="home" aria-selected="true">
                            {{ 'Optional mods'|trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="required-mods-tab" data-toggle="tab" href="#required-mods" role="tab" aria-controls="profile" aria-selected="false">
                            {{ 'Required mods'|trans }}
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="optional-mods" role="tabpanel" aria-labelledby="optional-mods-tab">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">{{ 'Mod name'|trans }}</th>
                                    <th scope="col">{{ 'Steam Workshop ID'|trans }}</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                    {# @var mod \App\Entity\Mod\Mod #}
                                    {% for mod in modList.mods %}
                                        {% if mod is instance_of('\\App\\Entity\\Mod\\SteamWorkshopMod') and mod.type != constant('\\App\\Entity\\Mod\\Enum\\ModTypeEnum::SERVER_SIDE') %}
                                            <tr>
                                                <th scope="row">{{ mod.name }}</th>
                                                <th scope="row">
                                                    <a href="{{ mod.url }}">{{ 'Steam Workshop'|trans }}</a>
                                                </th>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="required-mods" role="tabpanel" aria-labelledby="required-mods-tab">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">{{ 'Mod name'|trans }}</th>
                                    <th scope="col">{{ 'Steam Workshop ID'|trans }}</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                    {# @var mod \App\Entity\Mod\Mod #}
                                    {% for mod in modList.mods %}
                                        {% if mod is instance_of('\\App\\Entity\\Mod\\SteamWorkshopMod') %}
                                            <tr>
                                                <th scope="row">{{ mod.name }}</th>
                                                <th scope="row">
                                                    <a href="{{ mod.url }}">{{ 'Steam Workshop'|trans }}</a>
                                                </th>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
