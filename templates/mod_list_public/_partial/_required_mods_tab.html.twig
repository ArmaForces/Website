<div class="tab-pane fade" id="required-mods" role="tabpanel">
    {% embed '_partial/_table.html.twig' %}
        {% block table_head %}
            <tr>
                <th scope="col">#</th>
                <th scope="col" class="w-100">{{ 'Mod name'|trans }}</th>
                <th scope="col">{{ 'Steam Workshop ID'|trans }}</th>
            </tr>
        {% endblock %}
        {% block table_body %}
            {% set rowNo = 1 %}

            {# @var mod \App\Entity\Mod\SteamWorkshopMod #}
            {% for mod in requiredMods %}
                <tr>
                    <th scope="row">{{ rowNo }}</th>
                    <td>{{ mod.name }}</td>
                    <td>
                        <a href="{{ steam_workshop_item_url(mod.itemId) }}">{{ mod.itemId }}</a>
                    </td>
                </tr>

                {% set rowNo = rowNo + 1 %}
            {% endfor %}
        {% endblock %}
    {% endembed %}
</div>
