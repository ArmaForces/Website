<!--Section Missions-->
<section id="missions" class="text-center">
    <!-- Heading -->
    <h2 class="mb-5 font-weight-bold">Misje</h2>

    {% for missionsRow in recentMissions|batch(3) %}
    <!--Grid row-->
    <div class="row">
        {% for mission in missionsRow %}
        <!--Grid column-->
        <div class="col-lg-4 col-md-6 mb-4">

            <div class="view overlay z-depth-1-half">
                <img src="https://mdbootstrap.com/img/Photos/Others/images/48.jpg" class="img-fluid" alt="">
                <div class="mask-rel rgba-white-slight"></div>
            </div>

            <h4 class="my-4">
                <span class="font-weight-bold">{{ mission.title }}</span>
                - {{ mission.date|date('Y-M-d h:m') }}
            </h4>
            <p class="grey-text">
                {{ mission.description }}
            </p>
        </div>
        <!--Grid column-->
        {% endfor %}
    </div>
    <!--Grid row-->
    {% endfor %}

</section>
