{% extends 'card.html.twig' %}

{% block content %}
    {% embed '_partial/_page_header.html.twig' %}
        {% block page_title %}
            {{ 'Mod tags'|trans }}
        {% endblock %}
        {% block page_actions %}
            {% if is_granted(constant('App\\Security\\Enum\\PermissionsEnum::MOD_TAG_CREATE')) %}
                <a href="{{ path('app_mod_tag_create') }}" class="btn btn-primary">{{ 'Create mod tag'|trans }}</a>
            {% endif %}
        {% endblock %}
    {% endembed %}

    {% embed '_partial/_table.html.twig' %}
        {% import '_macro/table_macro.html.twig' as tableMacro %}

        {% block table_head %}
            <tr>
                <th scope="col">#</th>
                <th scope="col" class="w-100">{{ 'Mod tag name'|trans }}</th>
                <th scope="col">{{ 'Created at'|trans }}</th>
                <th scope="col">{{ 'Last updated at'|trans }}</th>
                <th></th>
            </tr>
        {% endblock %}
        {% block table_body %}
            {# @var modTag \App\Entity\ModTag\ModTag #}
            {% for modTag in modTags %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ tableMacro.row_name_with_description(modTag.name, modTag.description) }}</td>
                    <td>{{ tableMacro.row_blameable(modTag.createdAt, modTag.createdBy) }}</td>
                    <td>{{ tableMacro.row_blameable(modTag.lastUpdatedAt, modTag.lastUpdatedBy) }}</td>
                    <td class="text-right">
                        {% if is_granted(constant('App\\Security\\Enum\\PermissionsEnum::MOD_TAG_UPDATE'), modTag) %}
                            {{ tableMacro.row_action_edit(path('app_mod_tag_update', { name: modTag.name }), 'Edit mod tag'|trans) }}
                        {% endif %}

                        {% if is_granted(constant('App\\Security\\Enum\\PermissionsEnum::MOD_TAG_DELETE'), modTag) %}
                            {{ tableMacro.row_action_delete(path('app_mod_tag_delete', { name: modTag.name }), 'Are you sure you want to delete %name%?'|trans({ '%name%': modTag.name }), 'Delete mod tag'|trans) }}
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
