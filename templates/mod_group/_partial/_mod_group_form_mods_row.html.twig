<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-tabs justify-content-end" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="server-side-mods-tab" data-toggle="tab" href="#server-side-mods" role="tab">
                    {{ 'Server side mods'|trans }}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="required-mods-tab" data-toggle="tab" href="#required-mods" role="tab">
                    {{ 'Required mods'|trans }}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="optional-mods-tab" data-toggle="tab" href="#optional-mods" role="tab">
                    {{ 'Optional mods'|trans }}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="client-side-mods-tab" data-toggle="tab" href="#client-side-mods" role="tab">
                    {{ 'Client side mods'|trans }}
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade show active" id="server-side-mods" role="tabpanel">
                {% embed 'mod_group/_partial/_mod_group_form_mods_table.html.twig' %}
                    {% block table_body %}
                        {% set rowNo = 1 %}

                        {# @var mod \App\Entity\Mod\Mod #}
                        {% for child in form.children %}
                            {% set mod = form.vars.choices[loop.index0].data %}
                            {% if mod.type.value == constant('\\App\\Entity\\Mod\\Enum\\ModTypeEnum::SERVER_SIDE') %}
                                {% include 'mod_group/_partial/_mod_group_form_mods_table_row.html.twig' with { mod: mod } %}

                                {% set rowNo = rowNo + 1 %}
                            {% endif %}
                        {% endfor %}
                    {% endblock %}
                {% endembed %}
            </div>
            <div class="tab-pane fade" id="required-mods" role="tabpanel">
                {% embed 'mod_group/_partial/_mod_group_form_mods_table.html.twig' %}
