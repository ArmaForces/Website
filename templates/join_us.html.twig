                    <div class="card-body">
                        <h4 class="card-title">{{ 'Join ArmaForces'|trans }}</h4>
                        <section class="text-left">
                            <ol>
                                <li>
                                </li>
                            </ol>
                        </section>
                        <section class="text-left">
                            <h5>{{ 'What do we require to play with us'|trans }}</h5>
                            <ul>
                                <li>{{ 'Base Arma 3 game (without DLCs)'|trans }}</li>
