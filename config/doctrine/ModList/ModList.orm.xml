<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\ModList\ModList" repository-class="App\Repository\ModListRepository" table="mod_lists">
        <many-to-many field="mods" target-entity="App\Entity\Mod\AbstractMod" inversed-by="modLists">
            <join-table name="mod_lists_mods">
                <join-columns>
                    <join-column name="mod_list_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="mod_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-many>
    </entity>

</doctrine-mapping>
