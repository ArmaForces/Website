<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\UserManagement\Domain\Model\Permissions\AbstractPermissions" table="permissions" repository-class="App\UserManagement\Infrastructure\Persistence\Permissions\PermissionsRepository" inheritance-type="SINGLE_TABLE">
        <embedded name="userManagementPermissions" class="App\UserManagement\Domain\Model\Permissions\User\UserManagementPermissions" column-prefix="user_"/>
        <embedded name="userGroupManagementPermissions" class="App\UserManagement\Domain\Model\Permissions\UserGroup\UserGroupManagementPermissions" column-prefix="user_group_"/>
        <embedded name="modManagementPermissions" class="App\UserManagement\Domain\Model\Permissions\Mod\ModManagementPermissions" column-prefix="mod_"/>
        <embedded name="modGroupManagementPermissions" class="App\UserManagement\Domain\Model\Permissions\ModGroup\ModGroupManagementPermissions" column-prefix="mod_group_"/>
        <embedded name="dlcManagementPermissions" class="App\UserManagement\Domain\Model\Permissions\Dlc\DlcManagementPermissions" column-prefix="dlc_"/>
        <embedded name="modListManagementPermissions" class="App\UserManagement\Domain\Model\Permissions\ModList\ModListManagementPermissions" column-prefix="mod_list_"/>

        <discriminator-column name="type" type="string" length="255"/>
        <discriminator-map>
            <discriminator-mapping value="user" class="App\UserManagement\Domain\Model\Permissions\UserPermissions"/>
            <discriminator-mapping value="group" class="App\UserManagement\Domain\Model\Permissions\UserGroupPermissions"/>
        </discriminator-map>
    </entity>

</doctrine-mapping>
